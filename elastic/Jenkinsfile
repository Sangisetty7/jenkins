pipeline {

  environment {
    registry = "registry.hub.docker.com/bvineeth/elastic_automate_deployment"
    registryCredential = 'dockerhub_id'
    dockerImage = ""
  }

  agent any

  stages {

    stage('Cloning Source') {
      steps {
        git 'https://github.com/Vineeth-varma/jenkins.git'
      }
    }

    stage('Build image') {
      steps{
        script {
          docker.withRegistry( 'https://registry.hub.docker.com', registryCredential ) {
            dockerImage = docker.build("$registry:4.6-1","--file=./elastic/Dockerfile .")
          }
        }
      }
    }
      
    stage('Push image') {
      steps{
        script {
          docker.withRegistry( 'https://registry.hub.docker.com', registryCredential ) {
            dockerImage.push()
          }
        }
      }
   }
 }
}
